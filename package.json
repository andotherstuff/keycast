{
	"name": "keycast",
	"private": true,
	"scripts": {
		"dev": "concurrently -n 'rust,web' -c 'blue,green' \"bun run dev:backend\" \"bun run dev:web\"",
		"dev:backend": "cd backend && RUST_LOG=debug cargo watch -x \"run --bin keycast\"",
		"dev:web": "cd web && bun run dev",
		"build": "concurrently -n 'rust,web' -c 'blue,green' \"bun run build:backend\" \"bun run build:web\"",
		"build:backend": "cd backend && cargo build",
		"build:web": "cd web && bun run build",
		"db:reset": "cd backend && sqlx database reset --source ./database/migrations"
	},
	"devDependencies": {
		"concurrently": "^9.1.0"
	}
}
