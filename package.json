{
	"name": "keycast",
	"private": true,
	"version": "0.1.0",
	"description": "Keycast is a secure key management system for teams on Nostr.",
	"scripts": {
		"dev": "RUST_LOG=info,keycast_signer=debug MASTER_KEY_PATH=./master.key cargo watch -x \"run --bin keycast\"",
		"dev:api": "cd api && RUST_LOG=debug cargo watch -x \"run --bin keycast_api\"",
		"dev:signer": "RUST_LOG=warn,keycast_signer=debug MASTER_KEY_PATH=./master.key cargo watch -x \"run --bin keycast_signer\"",
		"dev:web": "cd web && bun run dev",
		"build": "cargo build --release --bin keycast",
		"build:api": "cd api && cargo build --release --bin keycast_api",
		"build:signer": "cargo build --release --bin keycast_signer",
		"build:web": "cd web && bun run build",
		"db:reset": "sqlx database reset --database-url sqlite:./database/keycast.db --source ./database/migrations",
		"key:generate": "./scripts/generate_key.sh",
		"key:generate:force": "./scripts/generate_key.sh --force"
	},
	"devDependencies": {
		"concurrently": "^9.1.2",
		"playwright": "^1.56.0"
	},
	"dependencies": {
		"@types/bun": "^1.2.5",
		"nostr-tools": "^2.10.2"
	}
}
